      }

      #uno {
         position: absolute;
         left: {{ xarray.0 ~ '%' }};
         top: {{ yarray.0 ~ '%' }};
         z-index: 1;
      }

      #dos {
         position: absolute;
         left: {{ xarray.1 ~ '%' }};
