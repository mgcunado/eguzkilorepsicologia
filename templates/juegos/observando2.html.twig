{% block javascripts %}
   {{ parent() }}

   {% set milisegundos = cantidadimages * 1000 %}
   <script type="text/javascript">

   </script>   
   <script type="text/javascript" src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>   
   <script type="text/javascript">
      //Funcion que hace desaparecer el div transcurridos 3000 milisegundos!
      $(document).ready(function() {
               setTimeout(function() {
                        // Declaramos la capa mediante una clase para ocultarlo
                        $( "{{ '#' ~ primerdesaparecido }}" ).fadeOut(0);
                     }, {{ milisegundos }} );

               setTimeout(function() {
                        // Declaramos la capa mediante una clase para ocultarlo
                        $( "{{ '#' ~ segundodesaparecido }}" ).fadeOut(0);
                     }, {{ milisegundos }} );

               setTimeout(function() {
                        $( "{{ '#' ~ tercerdesaparecido }}" ).fadeOut(0);
                     }, {{ milisegundos }} );

               setTimeout(function() {
                        $( "{{ '#' ~ cuartodesaparecido }}" ).fadeOut(0);
                     }, {{ milisegundos }} );

            });

      $(document).ready(function() {
               setTimeout(function() {
                        // Declaramos la capa  mediante una clase para ocultarlo
                        $(".midiv2").fadeIn(1500);
                        // Transcurridos x milisegundos aparecera la capa midiv2
                     }, {{ milisegundos }} );

               $('.reorder_link').on('click',function(){
                        setTimeout(function() {            
                                 $( "{{ '#' ~ primerdesaparecido }}" ).fadeIn(1000);
                                 $( "{{ '#' ~ primerdesaparecido }}" ).css("border","5px solid #f00");
                              }, 0 );
                        setTimeout(function() {            
                                 $( "{{ '#' ~ segundodesaparecido }}" ).fadeIn(1000);
                                 $( "{{ '#' ~ segundodesaparecido }}" ).css("border","5px solid #f00");
                              }, 0 );
                        setTimeout(function() {            
                                 $( "{{ '#' ~ tercerdesaparecido }}" ).fadeIn(1000);
                                 $( "{{ '#' ~ tercerdesaparecido }}" ).css("border","5px solid #f00");
                              }, 0 );
                        setTimeout(function() {            
                                 $( "{{ '#' ~ cuartodesaparecido }}" ).fadeIn(1000);
                                 $( "{{ '#' ~ cuartodesaparecido }}" ).css("border","5px solid #f00");
                              }, 0 );
                     });
            });
   </script>

{% endblock %}

