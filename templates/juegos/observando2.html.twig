      {# botón comprobar imágenes desaparecidas #}
      <div id="comprobamosdesapariciones"  class="midiv2" style="display:none;">
         <a href="javascript:void(0);" class="btn outlined mleft_no reorder_link" id="">Comprobar Desapariciones</a>
      </div>  
      {# fin botón comprobar imágenes desaparecidas #}

      {# botón para salir y volver a juegos #}
      <div id="saliryvolverajuegos">
         <a href="{{ path('juegos') }}" class="midiv2  btn btn-primary active botonjuegos" role="button" aria-pressed="true" style="display:none;">
            <h4>Salir y Volver a Juegos</h4></a>
