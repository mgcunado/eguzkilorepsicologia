{% extends 'base.html.twig' %}

{% block stylesheets %}
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
	<link rel="stylesheet" href="{{ asset('css/fontawesome-all.css') }}" />

	<style>       
.container {
	background-color: #eddff4;
	padding: 1rem 1rem 3rem 1rem;      
	/*padding: 25px 50px 75px 100px;*/
	border-style: solid;
	border-width: 1px;
	border-color: #555;
}     
	</style>

	<link href="https://fonts.googleapis.com/css?family=Merienda" rel="stylesheet">    
	<link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">   
	<link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Vollkorn" rel="stylesheet"> 
{% endblock %}

{% block carousel %}
	<div class="telefonopresente rounded-plus">
		<spam><i class="fas fa-mobile-alt mr-2"></i> 722 617 163 </spam>
	</div>
	<div>
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel"  data-interval="100000">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="{{ asset('images/ppp7.jpg')  }}" alt="First slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="{{ asset('images/ppp8.jpg')  }}" alt="Second slide">
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
{% endblock %}

{% block navbar %}
	<div id="psicologiaenirun" class="container-fluid bg-dark-morado d-flex justify-content-center sticky-top mb-4 pb-0">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark-morado">
			{#<a class="navbar-brand" href="#">Navbar</a>#}
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					{% for menu in ppp1 %}

						{% if menu.enlace == 'test_listado' %}

							{% if is_granted('ROLE_ADMIN') %}
								<li class="btn btn-dark nav-item px-3 ml-3 active">
									<a class="nav-link" href="{{ path(menu.enlace) ~ '#psicologiaenirun' }}">{{ menu.titulo  }}<span class="sr-only">(current)</span></a>
								</li>
							{% endif %}

						{% else %}

							<li class="{% if menu.id == 9 %} btn btn-outline-danger nav-item {% elseif menu.id == 7 %} btn btn-warning nav-item {% else %} nav-item px-2 {% endif %} {% if menu.id == linka %} active {% endif %} ">

								{% if menu.enlace == 'inicio' %}                        
									<a class="nav-link" href="{{ path(menu.enlace) }}">{{ menu.titulo  }}<span class="sr-only">(current)</span></a>
								{% elseif menu.enlace == 'tarifas' %}
									<a class="nav-link text-dark" href="{{ path(menu.enlace) ~ '#psicologiaenirun' }}">{{ menu.titulo  }}<span class="sr-only">(current)</span></a>
								{% else %}
									<a class="nav-link" href="{{ path(menu.enlace) ~ '#psicologiaenirun' }}">{{ menu.titulo  }}<span class="sr-only">(current)</span></a>
								{% endif %}
							</li>

						{% endif %}

					{%  endfor  %}
				</ul>
			</div>
		</nav>
	</div>
{% endblock %}

{% block javascripts %}
	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="{{ asset('js/jquery-3.2.1.slim.min.js') }}"> </script>
	<script src="{{ asset('js/popper.min.js') }}"> </script>
	<script src="{{ asset('js/bootstrap.min.js') }}"> </script>
	<!-- avisos legales -->
	<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
	<script src="{{ asset('js/cookies.js') }}"> </script>

	<script src="{{ asset('js/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
	<script type="text/javascript">
		$(function() {
			$('textarea.ckeditor').ckeditor();
		});
	</script>

	{% if linka != 1 %}
		<script>
			document.addEventListener("DOMContentLoaded", function(event) {
				if(document.getElementById("psicologiaenirun")){
					location.href = "#psicologiaenirun"
				}
			});
		</script>
	{% endif %}
{% endblock %}
